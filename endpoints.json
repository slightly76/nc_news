{
	"GET /api": {
		"description": "serves up a json representation of all the available endpoints of the api"
	},
	"GET /api/topics": {
		"description": "serves an array of all topics",
		"queries": [],
		"exampleResponse": {
			"topics": [{ "slug": "football", "description": "Footie!" }]
		}
	},
	"GET /api/articles": {
		"description": "serves an array of all articles",
		"queries": [
			"sort_by",
			"author",
			"created_at",
			"votes",
			"title",
			"topic",
			"article_id",
			"article_img_url",
			"order",
			"ASC",
			"DESC"
		],
		"exampleResponse": {
			"articles": [
				{
					"title": "Seafood substitutions are increasing",
					"topic": "cooking",
					"author": "weegembump",
					"body": "Text from the article..",
					"created_at": "2018-05-30T15:59:13.341Z",
					"votes": 0,
					"comment_count": 6
				}
			]
		}
	},
	"GET /api/articles/:article_id": {
		"description": "serves a single article by article_id",
		"queries": ["article_id"],
		"exampleResponse": {
			"articles": [
				{
					"title": "Seafood substitutions are increasing",
					"topic": "cooking",
					"author": "weegembump",
					"body": "Text from the article..",
					"created_at": "2018-05-30T15:59:13.341Z",
					"votes": 0,
					"comment_count": 6
				}
			]
		}
	},
	"GET /api/articles?sort_by=created_at": {
		"description": "serves an array of articles sorted by created_at in descending order and includes a comment count",
		"queries": ["sort_by"],
		"exampleResponse": {
			"articles": [
				{
					"title": "Seafood substitutions are increasing",
					"topic": "cooking",
					"author": "weegembump",
					"body": "Text from the article..",
					"created_at": "2018-05-30T15:59:13.341Z",
					"votes": 0,
					"comment_count": 6
				}
			]
		}
	},
	"GET /api/articles/:article_id/comments": {
		"description": "serves an array of comments by querying article_id and ordering by comments.created_at",
		"queries": ["article_id"],
		"exampleResponse": {
			"articles": [
				{
					"title": "Seafood substitutions are increasing",
					"topic": "cooking",
					"author": "weegembump",
					"body": "Text from the article..",
					"created_at": "2018-05-30T15:59:13.341Z",
					"votes": 0,
					"comment_count": 6
				}
			]
		}
	},
	"POST /api/articles/:article_id/comments": {
		"description": "posts comment to relavant article, when an appropriate article_id, body and author are supplied",
		"queries": ["article_id"],
		"exampleResponse": {
			"articles": [
				{
					"msg": "Comment Posted Successfully",
					"comment": {
						"comment_id": 19,
						"article_id": 2,
						"body": "First!!!!1!!one!one!!",
						"votes": 0,
						"author": "lurker",
						"created_at": "2025-03-11T18:31:29.964Z"
					}
				}
			]
		}
	},
	"DELETE /api/comments/:comment_id": {
		"description": "removes comment from the comments table when a valid comment_id is supplied",
		"queries": ["comment_id"],
		"exampleResponse": [{ "msg": "Comment Deneted Successfully" }]
	},
	"GET /api/users": {
		"description": "serves an array of users",
		"queries": [],
		"exampleResponse": {
			"users": [
				{
					"user_id": 1,
					"username": "butter_bridge",
					"name": "jonny",
					"avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
				}
			]
		}
	}
}
